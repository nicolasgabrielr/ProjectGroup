<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
  body {
    font-family: Arial;
  }

  * {
    box-sizing: border-box;
  }
</style>


<ul class="z-depth-1" id="li2">

  <li class=" z-depth-1">
  <h4 id="section_headder" >Mis Notificaciones</h4>
  </li>
  <div  class="notifications-box myScroll" >

    <div  >
      <li>
        <ol class="notification-list">
          <% @not_checkeds.each do |elem| %>
          <li  class="li-box z-depth-1">
            <div class="record-box">
              <div class="clearfix"></div>
              <div class="record-data-unread">
                <p ><u> Resolución:</u> <%=elem[:resolution]%></p>
                <p >Fecha: <%=elem[:date]%></p>
                <p class="short-text tooltipped" data-position="top" data-delay="50" data-tooltip="Descripción: <%=elem[:description]%>">Descripción: <%=elem[:description]%></p>
              </div>
              <div class="options-records-box">
                <ul class="options-records-list">
                  <li id="option2">
                    <form  action="/user_documents" method="post">
                      <input type="text" name="path" value="file/<%= elem[:filename]%>" hidden>
                      <input  type= "submit" value="Ver acta" class="button-download">
                		</form><br>
                  </li>
                  <li id="option2">
                    <form  action="/check_documents" method="post" >
                      <input  type="text" name="path" value="file/<%= elem[:filename]%>" hidden>
                      <input type= "submit" value="Marcar leído" class="button-mark-read" >
                  	</form><br>
                  </li>
                  <li id="option2">
                    <input type="text" name="elem" value ="<%= elem[:filename] %>" class="button" hidden>
                  </li>
                </ul>
              </div>
              <div class="clearfix"></div>
              </div>
          </li>
          <% end %>
        </ol>
      </li>
      <li>
        <ol  class="notification-list">
          <% @checkeds.each do |elem| %>
          <li class="li-box">
            <div class="record-box">
              <div class="clearfix"></div>
              <div class="record-data">
                <p><u> Resolución:</u><%=elem[:resolution]%></p>
                <p>Fecha:  <%=elem[:date]%></p>
                <p class="short-text tooltipped" data-position="top" data-delay="50" data-tooltip="Descripción: <%=elem[:description]%>">Descripción: <%=elem[:description]%></p>
              </div>
              <div class="options-records-box">
                <ul class="options-records-list">
                  <li id ="option2">
                    <form  action="/user_documents" method="post">
                      <input type="text" name="path" value="file/<%= elem[:filename]%>" hidden>
                      <input  type= "submit" value="Ver acta" class="button-download">
                		</form><br>
                  </li>
                  <li class="option">
                    <input type="text" name="elem" value ="<%= elem[:filename] %>" class="button" hidden>
                  </li>
                </ul>
              </div>
              <div class="clearfix"></div>
              </div>
          </li>
          <% end %>
        </ol>
      </li>
    </div>
</div>
</ul>
