<div class="row">
<form  name="login"action="/sign_in" method="post" onsubmit='return lowerEmail()'>
	<div class="login-tittle col s12">
		<h5>Bienvenido
		</h5>
	</div>
	<input type="text" name="email"class="button" placeholder="Ingrese su Email"></input><br>
	<input type="password" name="password" class="button" placeholder="Ingrese su contraseña"></input><br><br>
	<button class="btn1 btn waves-effect waves-light col s12 card-panel  brown lighten-4"  type="submit" name="action">Ingresar</button>
	<form><a style="color:red;"><%=@log_err%></a>
	</form><br><br><br>
</form>
<form action="/newUser" method="get">
	<label for="fname">¿Aún no se registró?</label><br>
	<button class="btn1 btn waves-effect waves-light col s12 card-panel brown lighten-4"  type="submit" name="action">Registrarse Ahora</button><br><br><br>
</form>
<form action="/index" method="post">
	<label for="fname">Busque actas en las que se lo menciona, con solo ingresar su DNI</label>
	<input type="text" name="dni"class="button" placeholder="Ingrese su DNI"></input><br>
	<button class="btn1 btn waves-effect waves-light col s12 card-panel brown lighten-4 tooltipped"  data-position="right" data-delay="50" data-tooltip="Registrate para ser notificado" type="submit" name="action">Buscar Actas</button><br><br><br>
</form>
</div>
<script src="websocket.js" type="text/javascript"></script>
<script>
    const lowerEmail = () => {
        // convierto el mail a minusculas y elimino espacios en blanco
        const emNew1 = document.login.email.value.toLowerCase();
        document.login.email.value=emNew1.replace(/ /g, "");
      /* return true;*/
    }

    </script>