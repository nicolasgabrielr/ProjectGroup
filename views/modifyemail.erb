<div class="center">

    <div class="modify-password">
        <form name="formName" action="/modifyemail" method="post" onsubmit='return validatePassword()'>
            <div>Ingrese su Contraseña: <input type="password" name="passwordActual"></div>
            <div></div>
            <div>Nuevo email: <input type="text" name="emailNew1"></div>
            <div>Repite email: <input type="text" name="emailNew2"></div>
            <div><input type="submit" value="Modificar Email"></div>
        </form>
       
